{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "outDir": "./build",
      "strict": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "declaration": true,
      "noImplicitAny": false,
      "noImplicitThis": false,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  
